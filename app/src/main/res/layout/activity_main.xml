<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/edt_welcome"
        android:layout_width="375dp"
        android:layout_height="0dp"
        android:layout_marginTop="35dp"
        android:textAlignment="center"
        android:text="Welcome"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/edt_signinto"
        android:layout_width="218dp"
        android:layout_height="18dp"
        android:textAlignment="center"
        android:layout_marginTop="15dp"
        android:text="Sign in to start"
        app:layout_constraintTop_toBottomOf="@id/edt_welcome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/iv_logosignin"
        android:layout_width="300dp"
        android:layout_height="129dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_logo"
        app:layout_constraintTop_toBottomOf="@id/edt_signinto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    
    <EditText
        android:layout_width="280dp"
        android:layout_height="18dp"
        android:layout_marginTop="50dp"
        android:text="Haven't account ? Sign up now!"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/iv_logosignin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>